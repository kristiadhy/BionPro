@page "/suppliers/create"
@page "/suppliers/edit"
@page "/suppliers/edit/{ParamSupplierID:guid}"

<PageTitle>@($"{ApplicationDetail?.ApplicationName} | {SupplierPageModel?.Title}")</PageTitle>

<MainMenuContainer>
    <MainTransactionButton OnButtonBackClicked="EvBackToPrevious" />
</MainMenuContainer>

<RadzenRow Gap="0.5rem" RowGap="0.5rem">
    <RadzenColumn SizeLG="6" SizeMD="12" class="rz-pb-5">
        <TransactionPageHeader FormStatus="@FormStatus" AdditionalText="@AdditionalHeaderText" />
        <RadzenCard class="my-2">
            <RadzenTemplateForm Data="@SupplierInputState.Supplier" Submit="@((SupplierDto args) => SubmitAsync(args))">
                <FluentValidationValidator />

                <RadzenStack>
                    <RadzenStack Gap="1rem">
                        <RadzenTabs>
                            <Tabs>
                                <RadzenTabsItem Text="Basic Info">
                                    <RadzenStack>
                                        <RadzenTextBox Name="@nameof(SupplierInputState.Supplier.SupplierName)"
                                                       Placeholder="Name"
                                                       @bind-Value="SupplierInputState.Supplier.SupplierName" />

                                        <RadzenTextBox Name="@nameof(SupplierInputState.Supplier.PhoneNumber)"
                                                       Placeholder="Phone Number"
                                                       @bind-Value="SupplierInputState.Supplier.PhoneNumber" />

                                        <RadzenTextBox Name="@nameof(SupplierInputState.Supplier.Email)"
                                                       Placeholder="Email"
                                                       @bind-Value="SupplierInputState.Supplier.Email" />

                                        <RadzenTextArea Name="@nameof(SupplierInputState.Supplier.Address)"
                                                        Placeholder="Address"
                                                        class="w-100"
                                                        aria-label="TextArea"
                                                        @bind-Value="SupplierInputState.Supplier.Address" />

                                        <RadzenTextArea Name="@nameof(SupplierInputState.Supplier.Note)"
                                                        Placeholder="Note"
                                                        class="w-100"
                                                        aria-label="TextArea"
                                                        @bind-Value="SupplierInputState.Supplier.Note" />

                                    </RadzenStack>
                                </RadzenTabsItem>

                                <RadzenTabsItem Text="Contact Person">
                                    <RadzenStack>
                                        <RadzenTextBox Name="@nameof(SupplierInputState.Supplier.ContactPerson)"
                                                       Placeholder="Contact Person"
                                                       @bind-Value="SupplierInputState.Supplier.ContactPerson" />
                                        <RadzenTextBox Name="@nameof(SupplierInputState.Supplier.CPPhone)"
                                                       Placeholder="Contact Person's Phone"
                                                       @bind-Value="SupplierInputState.Supplier.CPPhone" />
                                    </RadzenStack>
                                </RadzenTabsItem>
                            </Tabs>
                        </RadzenTabs>
                    </RadzenStack>
                </RadzenStack>
                <ValidationSummary />

                <SaveTransactionButton OnButtonClear="ClearField"
                                       IsBusy="@IsSaving" />

            </RadzenTemplateForm>
        </RadzenCard>
    </RadzenColumn>
</RadzenRow>