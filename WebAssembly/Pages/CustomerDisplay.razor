@page "/customers"
@using static WebAssembly.Shared.Enum.GlobalEnum

<PageTitle>@($"{GlobalConstant.AppName} | {CustomerPageModel?.Title}")</PageTitle>

<MainMenuContainer>
    <RadzenText TextStyle="TextStyle.H5">@CustomerPageModel?.Title</RadzenText>
    <BreadCrumb breadCrumbs="@BreadCrumbs" />
</MainMenuContainer>

<MainMenuContainer>
    <RadzenSplitButton Click=@(args => OnFilterButtonClick(args))
                       Icon="@filterIcon"
                       Text="@filterText"
                       Variant="Variant.Outlined"
                       Size="ButtonSize.Medium">
        <ChildContent>
            <RadzenSplitButtonItem Text="By Customer" Value="@nameof(FilterCondition.ByCustomerName)" />
        </ChildContent>
    </RadzenSplitButton>
    <MainMenuButton LoadDataClicked="EvReloadData"
                    CreateNewClicked="EvCreateNew" />
</MainMenuContainer>

@if (CustomerState.IsFilterByCustomerNameActive)
{
    <FilterByCustomerName @bind-CustomerNameValue="CustomerState.FilterCustomerNameValue"
                          @bind-IsFilterByCustomerNameActive="CustomerState.IsFilterByCustomerNameActive"
                          ButtonClearFilterClicked="ButtonClearFilterClicked" />
}

<RadzenDataGrid @ref="CustomerGrid"
                IsLoading=@isLoading
                Data="@CustomerState.CustomerList"
                SelectionMode="DataGridSelectionMode.Single"
                AllowSorting="true"
                AllowFiltering="false"
                AllowColumnResize="true"
                AllowColumnReorder="false"
                GridLines="DataGridGridLines.Both"
                ColumnWidth="150px"
                class="my-4">
    <Columns>
        <RadzenDataGridColumn Width="50px"
                              Title="#" Filterable="false"
                              Sortable="false"
                              TextAlign="TextAlign.Center">
            <Template Context="data">
                @(CustomerState.CustomerList.IndexOf(data) + 1)
            </Template>
        </RadzenDataGridColumn>

        <RadzenDataGridColumn Property="CustomerID"
                              Visible=false
                              Filterable="false"
                              Title="ID"
                              TextAlign="TextAlign.Center">
        </RadzenDataGridColumn>

        <RadzenDataGridColumn Property="CustomerName"
                              Title="Name"
                              Frozen="true" />

        <RadzenDataGridColumn Property="PhoneNumber"
                              Title="Phone" />

        <RadzenDataGridColumn Property="Address"
                              Title="Address" />

        <RadzenDataGridColumn Property="Email"
                              Title="Email" />

        <RadzenDataGridColumn Property="ContactPerson"
                              Title="Contact Person" />

        <RadzenDataGridColumn Property="CPPhone"
                              Title="Phone" />

        <RadzenDataGridColumn Property="Note"
                              Title="Note" />

        <RadzenDataGridColumn Context="Action"
                              Title="Action"
                              Filterable="false"
                              Sortable="false"
                              TextAlign="TextAlign.Left"
                              Frozen="true"
                              FrozenPosition="FrozenColumnPosition.Right">
            <Template Context="dto">
                <RadzenButton Icon="edit"
                              ButtonStyle="ButtonStyle.Light"
                              Variant="Variant.Flat"
                              Size="ButtonSize.Medium"
                              MouseEnter="@((args) => CustomTooltipService.ShowBottomTooltip(args, TableAction.Edit.ToString()))"
                              Click="@(args => EvEditRow(dto))"
                              @onclick:stopPropagation="true">
                </RadzenButton>
                <RadzenButton ButtonStyle="ButtonStyle.Danger"
                              Icon="delete"
                              Variant="Variant.Flat"
                              Shade="Shade.Lighter"
                              Size="ButtonSize.Medium"
                              class="my-1 ms-1"
                              MouseEnter="@((args) => CustomTooltipService.ShowBottomTooltip(args, TableAction.Delete.ToString()))"
                              Click="@(async args => await EvDeleteRow(dto))"
                              @onclick:stopPropagation="true">
                </RadzenButton>
            </Template>
        </RadzenDataGridColumn>
    </Columns>
</RadzenDataGrid>

<Pager @ref="Pager"
       PageSize="@CustomerState.MetaData.PageSize"
       TotalCount="@CustomerState.MetaData.TotalCount"
       CurrentPage="CustomerState.CustomerParameter.PageNumber"
       PageChanged="@(args => PageChanged(args))" />
