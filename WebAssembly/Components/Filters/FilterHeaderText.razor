<RadzenStack Orientation="Orientation.Horizontal"
             AlignItems="AlignItems.Start"
             Wrap="FlexWrap.Wrap"
             Gap="2px">
    <RadzenText TextStyle="TextStyle.Body1" Style="margin-top:2px;">@HeaderText</RadzenText>
    <RadzenButton Click="@OnButtonClearClick" Icon="highlight_off" ButtonStyle="ButtonStyle.Primary" Variant="Variant.Text" Size="ButtonSize.Small" />
</RadzenStack>

@code {
    [Parameter]
    public string? HeaderText { get; set; }

    [Parameter]
    public EventCallback OnButtonClearClick { get; set; }
}
